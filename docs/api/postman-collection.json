              "mode": "raw",
              "raw": "{\n  \"customerId\": \"88\",\n  \"totalAmount\": 25000\n}"
            },
            "url": {
              "raw": "http://localhost:8080/api/v1/orders",
              "protocol": "http",
              "host": [
                "localhost"
              ],
              "port": "8080",
              "path": [
                "api",
                "v1",
                "orders"
              ]
