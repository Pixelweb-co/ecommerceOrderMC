          }
        }
      ]
    },
    {
      "name": "Notification Service",
      "item": [
        {
          "name": "Consultar notificaciones por orden",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:8082/api/v1/notifications?orderId={{orderId}}",
              "protocol": "http",
              "host": [
                "localhost"
              ],
              "port": "8082",
              "path": [
                "api",
                "v1",
                "notifications"
              ],
              "query": [
                {
                  "key": "orderId",
                  "value": "{{orderId}}"
                }
              ]
            }
          }
        }
      ]
    }
  ]
